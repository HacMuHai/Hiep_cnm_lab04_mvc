<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="index.css">
</head>

<body>
    <div class="content">
        <form class="formInput" action="/add">
            <input id="ten" name="tenMonHoc" placeholder="Tên môn học" />
            <input id="loai" name="loaiMonHoc" placeholder="Loại môn học" />
            <input id="hocKi" name="hocKi" placeholder="Học kì" />
            <input id="khoa" name="khoa" placeholder="Khoa" />
            <input type="button" value="Thêm"/>
        </form>
        <table>
            <caption>Danh sách các môn học</caption>
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên môn học</th>
                    <th>Loại môn học</th>
                    <th>Học kì</th>
                    <th>Khoa</th>
                </tr>
            </thead>
            <tbody>
                <% courses.forEach(item=> {%>
                    <tr>
                        <td>
                            <%= item.id%>
                        </td>
                        <td>
                            <%= item.name%>
                        </td>
                        <td>
                            <%= item.course_type%>
                        </td>
                        <td>
                            <%= item.semester%>
                        </td>
                        <td>
                            <%= item.department%>
                        </td>
                    </tr>
                    <%})%>

            </tbody>
        </table>
    </div>
</body>

</html>